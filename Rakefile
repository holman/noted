require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "noted"
    gem.summary = "Find your own todos in your Rails app."
    gem.description = "Sometimes there's a lot of crap to do."
    gem.email = "github.com@zachholman.com"
    gem.homepage = "http://github.com/holman/noted"
    gem.authors = ["Zach Holman"]
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end